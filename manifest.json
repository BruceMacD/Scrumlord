{
  "name": "Scrumlord",
  "version": "1.0",
  "description": "Easily navigate team members during scrum.",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "options_page": "options_page/options.html",
  "browser_action": {
    "default_popup": "browser_actions/actions.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "64": "images/icon64.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "64": "images/icon64.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}
